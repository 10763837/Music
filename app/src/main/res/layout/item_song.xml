<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#50ffffff"
    app:contentPadding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_id"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f2ca6f"
            android:textSize="25sp"
            android:lines="1"
            android:ellipsize="end"
            android:text="01"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/item_id"
            android:id="@+id/item_title"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#40c0ef"
            android:textSize="17sp"
            android:text="这是歌曲的标题"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/item_id"
            android:id="@+id/item_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f9aa95"
            android:textSize="15sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:text="这是歌曲的演唱者"/>
        <ImageView
            android:id="@+id/iv_add"
            android:src="@drawable/ic_add_blue_300_48dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>